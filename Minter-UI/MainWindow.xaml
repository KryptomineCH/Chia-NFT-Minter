<Window x:Class="Minter_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minter_UI"
        mc:Ignorable="d"
        Title="KryptoMine NftMinter" Height="450" Width="800" Icon="/Resources/Application_Icon.png" Background="#201E11">
    <Grid>
        <TabControl>
            <TabItem Header="Collection Information">
                <local:CollectionInformation_Control></local:CollectionInformation_Control>
            </TabItem>
            <TabItem Header="Metadata">
                <local:Metadata_Control></local:Metadata_Control>
            </TabItem>
            <TabItem Header="Settings">
                <local:Settings_Control></local:Settings_Control>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
